{
  "brand": {
    "primaryColor": "#6366f1",
    "secondaryColor": "#8b5cf6",
    "accentColor": "#f59e0b",
    "backgroundColor": "#ffffff",
    "textColor": "#1f2937",
    "headlineColor": "#111827",
    "subheadlineColor": "#374151",
    "bodyColor": "#4b5563"
  },
  "fonts": {
    "primary": "Inter, system-ui, -apple-system, sans-serif",
    "heading": "Inter, system-ui, -apple-system, sans-serif",
    "body": "Inter, system-ui, -apple-system, sans-serif"
  },
  "gradients": {
    "primary": "linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%)",
    "warm": "linear-gradient(135deg, #f59e0b 0%, #ef4444 100%)",
    "cool": "linear-gradient(135deg, #0ea5e9 0%, #6366f1 100%)",
    "dark": "linear-gradient(180deg, #1f2937 0%, #111827 100%)"
  },
  "layouts": {
    "title-center": {
      "headline": { "x": 10, "y": 35, "width": 80, "height": 15 },
      "subheadline": { "x": 15, "y": 52, "width": 70, "height": 10 }
    },
    "title-left": {
      "headline": { "x": 8, "y": 30, "width": 50, "height": 15 },
      "subheadline": { "x": 8, "y": 47, "width": 45, "height": 10 },
      "image": { "x": 55, "y": 15, "width": 40, "height": 70 }
    },
    "split-left": {
      "headline": { "x": 5, "y": 10, "width": 45, "height": 12 },
      "bodyText": { "x": 5, "y": 25, "width": 45, "height": 60 },
      "image": { "x": 52, "y": 10, "width": 45, "height": 80 }
    },
    "split-right": {
      "image": { "x": 5, "y": 10, "width": 45, "height": 80 },
      "headline": { "x": 52, "y": 10, "width": 45, "height": 12 },
      "bodyText": { "x": 52, "y": 25, "width": 45, "height": 60 }
    },
    "full-image": {
      "image": { "x": 0, "y": 0, "width": 100, "height": 100 },
      "headline": { "x": 5, "y": 75, "width": 90, "height": 12 },
      "subheadline": { "x": 5, "y": 88, "width": 90, "height": 8 }
    },
    "bullets-left": {
      "headline": { "x": 5, "y": 8, "width": 55, "height": 12 },
      "bullets": { "x": 5, "y": 22, "width": 55, "height": 70 },
      "image": { "x": 62, "y": 15, "width": 35, "height": 70 }
    }
  },
  "video": {
    "width": 1920,
    "height": 1080,
    "fps": 30,
    "codec": "libx264",
    "format": "mp4"
  }
}
